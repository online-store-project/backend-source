<!DOCTYPE html>
    <html lang="en">
        <head>
            <title>
                Mainpage
            </title>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
            <link rel="stylesheet" type="text/css" href="/css/accountpage.css">
            <link rel="stylesheet" type="text/css" href="/css/partials.css">
            <script src="/src/accountpage.js"></script>
            <script src="/src/partials.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        </head>
        <script>
            let user = JSON.parse('<%- data %>');

            '<% if (locals.message) { %>'
                let value = '<%- message %>';
                
            '<% } %>'
        </script>
        <body onload="adjust_partials(), check_username(), adjust_accountpage(user)">
            <section class="bg-info">
                <div class="box">
                    <form class="form" method="POST" action="/online-store/update-account">
                        <div class="grid-container">
                            <div class="item1">Käyttäjänimi</div>
                            <div class="item">
                                <input type="text" id="username" readonly>
                            </div>
                            <div class="item2">Sähköpostiosoite</div>
                            <div class="item">
                                <input type="text" id="email" readonly>
                            </div>
                            <div class="item3">Etunimi</div>
                            <div class="item">
                                <input type="text" name="firstname" id="firstname" required="name" pattern="[A-Za-z]{2,20}" title="Vain kirjaimia 3-20kpl">
                            </div>
                            <div class="item4">Sukunimi</div>
                            <div class="item">
                                <input type="text" name="lastname" id="lastname" required="name" pattern="[A-Za-z]{2,30}" title="Vain kirjaimia 3-30kpl">
                            </div>
                            <div class="submit">
                                <input type="submit" value="Edit">
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </body>
    </html>
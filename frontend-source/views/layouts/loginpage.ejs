<link rel="stylesheet" type="text/css" href="/css/loginpage.css">
<script src="/src/loginpage.js"></script>
<script>
    '<% if(locals.message) { %>';
        check_errormessage('<%- message %>');
    '<% } %>';
</script>
<section class="bg-info">
    <div class="box">
        <form class="form" method="POST" action="/online-store/login">
            <div id="test" class="grid-container">
                <div class="item1">Sähköpostiosoite</div>
                <div class="item2">
                    <input type="text" name="email" required="name" pattern=".{5,40}">
                </div>
                <div class="item3">Salasana</div>
                <div class="item4">
                    <input type="password" name="pwd" required="password" pattern=".{8,40}" title="Merkkejä täytyy olla 8-40kpl">
                </div>
                <div class="item5">
                    <input type="submit" value="Kirjaudu">
                </div>
            </div>
        </form>
    </div>
</section>